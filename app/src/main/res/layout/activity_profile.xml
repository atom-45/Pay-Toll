<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.automatedcartollingsystem.registration.ProfileActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="114dp"

        android:layout_height="114dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="150dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profilePicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/app_logo"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="317dp"
        android:layout_height="410dp"
        android:layout_marginBottom="112dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.971">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name_textView"
                android:layout_width="56dp"
                android:layout_height="23dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="46dp"
                android:text="@string/user_name"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/email_textView"
                app:layout_constraintEnd_toStartOf="@+id/nameTextView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="132dp"
                android:layout_height="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="36dp"
                android:text="name"
                app:layout_constraintBottom_toTopOf="@+id/emaiTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/email_textView"
                android:layout_width="54dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="44dp"
                android:text="@string/prompt_email"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/mobile_numberTV"
                app:layout_constraintEnd_toStartOf="@+id/emaiTextView"
                app:layout_constraintHorizontal_bias="0.027"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/account_textView"
                android:layout_width="81dp"
                android:layout_height="21dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="68dp"
                android:text="@string/account"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/cars_textView"
                app:layout_constraintEnd_toStartOf="@+id/accountTextView"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/mobileNumberTextView"
                android:layout_width="130dp"
                android:layout_height="18dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="39dp"
                android:text="@string/mobile_number"
                app:layout_constraintBottom_toTopOf="@+id/accountTextView"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/accountTextView"
                android:layout_width="130dp"
                android:layout_height="19dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="40dp"
                android:text="accountNumber"
                app:layout_constraintBottom_toTopOf="@+id/carsTextView"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/cars_textView"
                android:layout_width="46dp"
                android:layout_height="21dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="64dp"
                android:text="@string/cars"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/carsTextView"
                app:layout_constraintHorizontal_bias="0.025"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/emaiTextView"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="48dp"
                android:text="email"
                app:layout_constraintBottom_toTopOf="@+id/mobileNumberTextView"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/mobile_numberTV"
                android:layout_width="124dp"
                android:layout_height="23dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="36dp"
                android:text="@string/mobile_number"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/account_textView"
                app:layout_constraintEnd_toStartOf="@+id/mobileNumberTextView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/carsTextView"
                android:layout_width="151dp"
                android:layout_height="83dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                android:text="Cars"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/changeProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="124dp"
        android:background="@drawable/ic_baseline_photo_camera_24"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

</androidx.constraintlayout.widget.ConstraintLayout>